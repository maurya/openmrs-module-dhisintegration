<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.openmrs.module.dhisintegration.CategoryOption" table="dim_categoryoption">
		<id name="id" type="int" unsaved-value="0">
			<column name="id" />
			<generator class="native" />
		</id>
		<discriminator column="id" insert="false" />

		<property name="uuid" type="java.lang.String" column="uuid"
			length="38" unique="true" />
			
			<property name="name" type="java.lang.String" column="name"
			not-null="true" length="230" />
			
		<property name="code" type="java.lang.String" column="code"
			not-null="false" length="50" />		
			
		<property name="uid" type="java.lang.String" column="uid"
			length="11" not-null="true" />
			

		<set name="options" table="dim_categoryoption_option">
            <key column="categoryoption_id" not-null="true" />
             <many-to-many entity-name="org.openmrs.module.dhisintegration.Option">
                <column name="option_id" not-null="true" />
            </many-to-many>
        </set>	
     
        
        <set name="categoryCombos" table="dim_catcombo_combooption" lazy="false" inverse="true">
            <key column="catoption_id" not-null="true" />
             <many-to-many entity-name="org.openmrs.module.dhisintegration.CategoryCombo">
                <column name="catcombo_id" not-null="true" />
            </many-to-many>
        </set>	
				
		<many-to-one name="integrationServer" class="org.openmrs.module.dhisintegration.IntegrationServer"
			not-null="true">
			<column name="server_Id" />
		</many-to-one>		
	</class>
</hibernate-mapping>